{
    "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier", "prettier/flowtype", "prettier/react", "prettier/standard"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "fetch": false
    },
    "plugins": [
        "react",
        "react-native",
        "flowtype",
        "prettier",
        "standard"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js"]
        }],
        "react/forbid-prop-types": 0
    }
}